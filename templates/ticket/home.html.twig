   <!-- formulaire================================================== -->

<div class="row title"> 
    <h1>Billeterie page d'acceuil</h1>
</div>

<div class="row billetdescription text-center">

    <h1>Musée du Louvre</h1>
    <h2>Collections permanentes, expositions temporaires et musée Eugène Delacroix</h2>
    <p>
        Ouvert de 9h à 18h, et jusqu’à 21h45 les mercredis et vendredis. Fermé les mardis et les 1 er janvier, 1 er mai et 25 décembre. Entrée libre sans billet, sur présentation d’un justificatif pour les moins de 18 ans, les 18-25 ans résidents de l’Espace Economique Européen, les personnes handicapées et leur accompagnateur et les bénéficiaires des minimas sociaux.
    </p>



        
    <div class=" row formulaire">
        <h2>Attention la vente de tickets individuels est limité  à 8  billets au maximum </h2>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_row(form.dateVisit) }}
            {{ form_row(form.ticketType) }}
                
         <div class=" row text-center">
            <div class=" col-sm-offset-4   billetchoice"> 
                <img src="{{ asset('/image/joconde.jpeg') }}"   /></br>
                {{ form_row(form.save) }}
                {{ form_rest(form) }}

                {{ form_end(form) }}
            </div>
         </div>
    </div>

</div>

